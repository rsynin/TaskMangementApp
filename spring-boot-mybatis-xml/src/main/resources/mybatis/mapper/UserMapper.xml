<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neo.mapper.UserMapper" >
    <resultMap id="BaseResultMap" type="com.neo.model.User" >
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="BOOLEAN"/>
    </resultMap>
    
    <sql id="Base_Column_List" >
        name, password, role
    </sql>

    <select id="getOne" parameterType="java.lang.String" resultMap="BaseResultMap" >
        SELECT 
       <include refid="Base_Column_List" />
	   FROM user
	   WHERE name = #{name}
    </select>

    <insert id="insert" parameterType="com.neo.model.User" >
       INSERT INTO 
       		user
       		(name,password,role)
       	VALUES
       		(#{name}, #{password}, #{role})
    </insert>

</mapper>